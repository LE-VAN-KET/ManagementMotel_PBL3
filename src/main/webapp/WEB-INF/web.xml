<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>managementmotel</display-name>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <resource-env-ref>
        <resource-env-ref-name>BeanManager</resource-env-ref-name>
        <resource-env-ref-type>javax.enterprise.inject.spi.BeanManager</resource-env-ref-type>
    </resource-env-ref>
    <context-param>
        <param-name>WELD_CONTEXT_ID_KEY</param-name>
        <param-value>context</param-value>
    </context-param>
    <listener>
        <listener-class>org.jboss.weld.environment.servlet.Listener</listener-class>
    </listener>
    <session-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

<!--    Set SMTP server-->
    <context-param>
        <param-name>host</param-name>
        <param-value>smtp.gmail.com</param-value>
    </context-param>
    <context-param>
        <param-name>port</param-name>
        <param-value>587</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.CONFIG_FILES</param-name>
        <param-value>/WEB-INF/jboss-web.xml</param-value>
    </context-param>

    <!--    Authentication-->
    <filter>
        <filter-name>authenticationFilter</filter-name>
        <filter-class>filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authenticationFilter</filter-name>
        <url-pattern>/register</url-pattern>
        <url-pattern>/login</url-pattern>
    </filter-mapping>

<!--    Authorization post-->
    <filter>
        <filter-name>authorizationPost</filter-name>
        <filter-class>filter.AuthorizationPostFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authorizationPost</filter-name>
        <url-pattern>/post/*</url-pattern>
        <url-pattern>/personal-post/*</url-pattern>
    </filter-mapping>

<!--    Authorization edit profile-->
    <filter>
        <filter-name>authorizationEditProfile</filter-name>
        <filter-class>filter.AuthorizationEditProfileFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authorizationEditProfile</filter-name>
        <url-pattern>/edit-profile</url-pattern>
    </filter-mapping>

<!--    Authorization admin-->
    <filter>
        <filter-name>authorizationAdmin</filter-name>
        <filter-class>filter.AuthorizationAdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authorizationAdmin</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>

<!--    error access url-->
    <error-page>
        <error-code>404</error-code>
        <location>/views/HandleError.jsp</location>
    </error-page>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>